{
  "name": "VK Spoilers",
  "version": "1.1",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "manifest_version": 2,
  "description": "Скрывает из ленты новостей ВКонтакте записи, содержащие определенные словосочетания.",
  "permissions": [
    "tabs",
    "*://vk.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_page": "popup.html",
  "content_scripts": [
    {
      "matches": ["*://vk.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "page_action": {
    "default_icon": {
      "19": "icon-19.png",
      "38": "icon-38.png"
    },
    "default_title": "VK Spoilers",
    "default_popup": "popup.html"
  }
}